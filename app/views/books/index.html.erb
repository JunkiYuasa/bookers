<h1>Books</h1>
<div>
  <%= flash[:notice] %>
</div>

<% @books.each do |book| %>
  <div>
    <%= book.title %>:
    <%= book.body %>
  </div>
<% end %>
  
  
<h1>New book</h1>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <p><%= f.submit "Create Book" %></p>
<% end %>